{
  "name": "@unispace-meteor/miragex",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch",
    "feedback": "npm run feedback:fetch && run-p feedback:attach:core feedback:attach:frame:install feedback:attach:frame:simple",
    "feedback:fetch": "ts-node --require dotenv/config ./src/script/fetch.ts",
    "feedback:attach:core": "ts-node --require dotenv/config ./src/script/attachCore.ts",
    "feedback:attach:frame:install": "ts-node --require dotenv/config ./src/script/attachInstallFrame.ts",
    "feedback:attach:frame:simple": "ts-node --require dotenv/config ./src/script/attachSimpleFrame.ts",
    "clean": "node -e \"try{fs.rmSync('dist', { recursive: true, force: true })\"}catch(e){}",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "lint": "eslint --fix src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@unispace-meteor/common": "^1.0.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jose": "^5.6.3",
    "json2emap": "^0.2.0",
    "react": "^18.3.1",
    "react-reconciler": "^0.29.2",
    "uuid": "^9.0.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.3",
    "@types/react-reconciler": "^0.28.8",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "brson.js": "^1.0.5",
    "yaml": "^2.5.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}