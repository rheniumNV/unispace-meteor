{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/core/unit/**/*res.ts",
    "./src/core/unit/**/*ResFeedback.json",
    "./src/res/**/*.ts",
    "src/lib/mirage-x/unit/res/index.ts",
    "./src/lib/mirage-x/res/**/*.tsx",
    "./src/lib/mirage-x/res/**/*.ts",
    "./src/lib/virtualObject/**/*.ts"
  ]
}
