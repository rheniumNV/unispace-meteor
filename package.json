{
  "name": "unispace-meteor",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run start -w workspaces/console",
    "build": "npm run build:common && run-p build:simulator build:miragex && npm run build:data-client && npm run build:console",
    "build:common": "npm run build -w workspaces/common",
    "build:simulator": "npm run build -w workspaces/simulator",
    "build:miragex": "npm run build -w workspaces/miragex",
    "build:console": "npm run build -w workspaces/console",
    "build:data-client": "npm run build -w workspaces/data-client",
    "dev": "run-p dev:*",
    "dev:common": "npm run dev -w workspaces/common",
    "dev:simulator": "npm run dev -w workspaces/simulator",
    "dev:miragex": "npm run dev -w workspaces/miragex",
    "dev:console": "npm run dev -w workspaces/console",
    "dev:data-client": "npm run dev -w workspaces/data-client",
    "clean": "run-p clean:*",
    "clean:common": "npm run clean -w workspaces/common",
    "clean:miragex": "npm run clean -w workspaces/miragex",
    "clean:console": "npm run clean -w workspaces/console",
    "format": "run-p format:*",
    "format:common": "npm run format -w workspaces/common",
    "format:miragex": "npm run format -w workspaces/miragex",
    "format:console": "npm run format -w workspaces/console",
    "lint": "run-p lint:*",
    "lint:common": "npm run lint -w workspaces/common",
    "lint:miragex": "npm run lint -w workspaces/miragex",
    "lint:console": "npm run lint -w workspaces/console"
  },
  "workspaces": [
    "workspaces/common",
    "workspaces/miragex",
    "workspaces/simulator",
    "workspaces/console",
    "workspaces/data-client"
  ],
  "volta": {
    "node": "22.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.5.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-rule-composer": "^0.3.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.9.3"
  },
  "author": "unispace",
  "license": "ISC",
  "description": ""
}